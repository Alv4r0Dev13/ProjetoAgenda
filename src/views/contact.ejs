<%- include('includes/header') %>
<%- include('includes/nav') %>

<section class="container">
  <% if (!contact._id) { %>
  <h1>Criar contato</h1>
  <p class="subtitle">Adicionar um contato na lista</p>

  <%- include('includes/messages') %>
  <form action="/contact/create" method="POST" class="form contact-form overlay">
    <% } else { %>
    <h1>Editar contato</h1>
    <p class="subtitle">Editar informações do contato</p>
    <%- include('includes/messages') %>
    <form action="/contact/edit/<%= contact._id %>" method="POST" class="form contact-form overlay">
      <% } %>
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">

      <label for="name">Nome</label>
      <input value="<%= contact.name %>" type="text" name="name" class="underlay" id="name">

      <label for="lastname">Sobrenome</label>
      <input value="<%= contact.lastname %>" type="text" name="lastname" class="underlay" id="lastname">

      <label for="email">Email</label>
      <input value="<%= contact.email %>" type="email" name="email" class="underlay" id="email">

      <label for="tel">Telefone</label>
      <input value="<%= contact.tel %>" type="tel" name="tel" class="underlay" id="tel">

      <button type="submit" class="submit overlay">Salvar</button>
</section>

<%- include('includes/footer') %>